---
import { OuRealLogo } from "../components/OuRealLogo";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full bg-background">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/oureal.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-lg mx-auto h-full">
    <slot />
  </body>
</html>
<style is:global>
  html {
    color: #fff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
